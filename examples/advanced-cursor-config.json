{
    "mcp": {
        "servers": {
            "python-venv": {
                "command": "npx",
                "args": [
                    "@pceuropa/mcp-server-python-venv"
                ],
                "env": {
                    "DEBUG": "false",
                    "PROJECT_PATH": "${workspaceFolder}",
                    "PYTHON_PATH": "python3",
                    "PIP_PATH": "pip3"
                }
            }
        }
    }
}