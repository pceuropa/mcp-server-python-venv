{
    "mcpServers": {
        "python-venv": {
            "command": "npx",
            "args": [
                "@pceuropa/mcp-server-python-venv"
            ],
            "transport": "stdio",
            "env": {
                "PYTHON_PATH": "/path/to/your/venv/bin/python",
                "VIRTUAL_ENV": "/path/to/your/venv",
                "UV_PATH": "/path/to/uv"
            }
        }
    }
}