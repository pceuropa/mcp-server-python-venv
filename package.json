{
  "name": "@pceuropa/mcp-server-python-venv",
  "version": "1.0.1",
  "description": "Comprehensive Python virtual environment inspector for Cursor IDE",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-python-venv": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/**/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build && npm test && chmod +x dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "python",
    "virtual-environment",
    "cursor",
    "ide",
    "venv",
    "poetry",
    "pipenv",
    "conda",
    "package-manager",
    "dependency-management"
  ],
  "author": "Rafal Marguzewicz <info@pceuropa.net>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pceuropa/mcp-server-python-venv.git"
  },
  "bugs": {
    "url": "https://github.com/pceuropa/mcp-server-python-venv/issues"
  },
  "homepage": "https://github.com/pceuropa/mcp-server-python-venv#readme",
  "publishConfig": {
    "access": "public"
  }
}
